:80 {
  redir /netdata /netdata/
  redir /dashboard /dashboard/
  redir / /dashboard/
  handle_path /netdata/* {
      reverse_proxy netdata:{$NETDATA_PORT:19999}
  }
  handle_path /dashboard/* {
   root * /root/website
   file_server
  }
  handle_path /device* {
   root * /data/caddy/device
   file_server
  }
}
